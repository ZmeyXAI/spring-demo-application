<?xml version="1.0" ?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"> 
    
	<!-- задаёт описание сервлета -->
    <servlet> 
        <!--название сервлета, 
        которое будет использовано для мэппинга-->
		<servlet-name>appServlet</servlet-name>
        <!-- задаёт класс сервлета-->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- задаёт загрузку сервлета при старте сервера-->
		<load-on-startup>1</load-on-startup>
    </servlet>

    <!--описывает отображение частей пути в URL на сервлеты-->
	<servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <!-- шаблон URL, при отправке запроса 
        на который будет задействован сервлет-->
		<url-pattern>/</url-pattern>
    </servlet-mapping>
	
	<!-- настраивает параметр contextConfigLocation 
	в рамках контекста и задаёт путь к файлу 
	с корневым контекстом как /WEB-INF/spring/root.xml-->
	<context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>/WEB-INF/spring/root.xml</param-value>
	</context-param>
	
	<!--настраивает слушателя 
	для загрузки соответствующего контекста. -->
	<listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>
